                    </div>
                    <div class="card-block p-0">

                        <div class="d-flex">

                            <div class="col-2 p-4">
                                <div class="d-flex flex-column">
                                    <h5 class="fw-5 title-section mb-4">Nuevos</h5>
                                    <div class="badge-dashboard">
                                        <i class="material-icons">sentiment_very_satisfied</i>
                                        <p class="mb-0">Clientes nuevos: <span class="text-danger">@Model.Model.NumCliNew</span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-10 pr-2 pl-0 py-2">
                                <table class="table table-striped table-small border-left border-right border-bottom">
                                    <thead>
                                        <tr>
                                            <th class="w-5 text-center">Nº Cli</th>
                                            <th>Cliente</th>
                                            <th class="w-5 text-center">NIF</th>
                                            <th class="w-10 text-center">CP</th>
                                            <th class="w-10 text-center">Pob</th>
                                            <th class="w-10 text-right">Base (€)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 0; i++)
                                        {
                                            <tr>
                                                <td class="text-center">123</td>
                                                <td>Grup Read, SLU</td>
                                                <td class="text-center">12345678N</td>
                                                <td class="text-center">08013</td>
                                                <td class="text-center">Barcelona</td>
                                                <td class="text-right">1234€</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                                @* @Html.Raw(Model.Datos.Paginador) *@
                            </div>

                        </div>

                        <hr class="m-0" />

                        <div class="d-flex">

                            <div class="col-2 p-4">
                                <h5 class="fw-5 title-section mb-4">Facturas</h5>
                                <div class="badge-dashboard badge-dashboard-bg badge-dashboard-bg-receipt mb-2">
                                    <i class="material-icons">receipt</i>
                                    <p class="mb-0">Nº de facturas: <span class="text-danger">@Model.Model.NumFacCliNew</span></p>
                                </div>
                                <div class="badge-dashboard badge-dashboard-bg badge-dashboard-bg-euro">
                                    <i class="material-icons">euro_symbol</i>
                                    <p class="mb-0">Imp. base facturación: <span class="text-danger">@Model.Model.ImpFacCliNew</span></p>
                                </div>
                            </div>
                            <div class="col-10 pr-2 pl-0 py-2">
                                <table class="table table-striped table-small border-left border-right border-bottom">
                                    <thead>
                                        <tr>
                                            <th class="w-5 text-center">Nº Cli</th>
                                            <th>Cliente</th>
                                            <th class="w-5 text-center">NIF</th>
                                            <th class="w-10 text-center">CP</th>
                                            <th class="w-10 text-center">Pob</th>
