@model DashBoardLibrary.DashBoardViewModel
@{
    Layout = "~/Views/Shared/Modulo-Web/_Modulo-Web-Web.cshtml";
    ViewData["Title"] = Model.Model.Modulo;
}

<div class="main-content m-0" id="widget-area">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                @if (Model.Model.Err.eserror)
                {
                    ViewData["err"] = Model.Model.Err.mensaje;
                    @Html.Partial("AccesoDenegado");
                }
                else
                {

                    @Html.Partial("WebsCabecera")

                    @* tabs *@

                    @Html.Partial("Web-Tabs")

                    <div class="row">
                        <div class="col-9">
                            <div class="card mb-3">
                                <div class="card-header card-header-options">
                                    <span>Listado de condiciones</span>
                                </div>
                                <div class="card-block p-0">

                                    <div class="d-flex flex-column p-2">

                                        <div class="d-flex mb-0">
                                            <div class="input-group input-group-sm mr-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="">URL Base</span>
                                                </div>
                                                <input type="text" class="form-control" id="" aria-describedby="" value="" placeholder="URL Base">
                                                <div class="input-group-append">
                                                    <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="">Título</span>
                                                </div>
                                                <input type="text" class="form-control" id="" aria-describedby="" value="" placeholder="Título">
                                                <div class="input-group-append">
                                                    <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="card card-table mb-3">
                                <div class="card-header card-header-options">
                                    <span>Listado de condiciones</span>
                                    <button type="button" class="btn btn-primary btn-sm btn-sm-2x">Nueva</button>
                                </div>
                                <div class="card-block p-0">

                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Condición</th>
                                                <th class="w-5 text-center">Activas</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Formas de pago</td>
                                                <td class="text-center"><i class="fa fa-check text-success"></i></td>
                                            </tr>
                                            <tr>
                                                <td>Formas de pago</td>
                                                <td class="text-center"><i class="fa fa-times text-danger"></i></td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                        <button type="submit" class="btn btn-sm btn-primary cliente-comercial-programa-guardar">Guardar</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-3">

                            <div class="card-info-wrapper w-100" id="sindatos" style="">
                                <div class="card-info">
                                    <div class="d-flex justify-content-center align-items-center">

                                        <div class="d-flex flex-column">
                                            <p class="pb-2 animated fadeIn"><img src="https://image.flaticon.com/icons/svg/609/609998.svg" style="width: 20%;" class="animated fadeIn"></p>
                                            <p class="pb-2 animated fadeIn">En esta pantalla podrá modificar o añadir nuevas condiciones o políticas a su web</p>
                                        </div>
                                    </div>
                                </div>
                                <svg class="card-info-triangle">
                                    <polygon points="0,0 200,0 0,200" fill="currentColor"></polygon>
                                </svg>
                            </div>

                            <div class="card mb-3">
                                <div class="card-header card-header-options">
                                    <span>Nueva condición</span>
                                </div>
                                <div class="card-block p-0">
                                    <div class="card-block p-0">
                                        <div class="d-flex flex-column p-2">

                                            <div class="input-group input-group-sm mb-1">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="">Título</span>
                                                </div>
                                                <input type="text" class="form-control" id="" aria-describedby="" value="" placeholder="Título">
                                            </div>

                                            <div class="input-group input-group-sm mb-1">
                                                <div class="input-group-prepend">
                                                    <label class="input-group-text" for="">URL</label>
                                                </div>
                                                <input type="text" class="form-control" id="" aria-describedby="" value="" placeholder="URL">
                                            </div>

                                            <div class="input-group input-group-sm mb-0">
                                                <div class="input-group-prepend">
                                                    <label class="input-group-text" for="">Exposición</label>
                                                </div>
                                                <textarea class="form-control" placeholder="Exposición" rows="4"></textarea>
                                            </div>

                                        </div>

                                    </div>

                                    <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                        <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        
                        
                    </div>

                    

                }

            </div>
        </div>

    </div>

</div>

@Html.Partial("DashboardScripts")