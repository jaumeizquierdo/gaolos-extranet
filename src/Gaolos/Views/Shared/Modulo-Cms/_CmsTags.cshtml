<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gaolos</title>

    @Html.Partial("Estilos")

    <script src="https://cdn.ckeditor.com/4.7.0/standard/ckeditor.js"></script>

    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    @Html.Partial("Scripts")
    @Html.Partial("Scripts-Ace-Editor")
    <script src="~/js/ModuloCMS-ini.js" asp-append-version="true"></script>

</head>
<body class="gaolos-cms">

    <div class="layout__body">

        <aside class="layout__nav layout__columns d-none d-xl-block" id="MenuGaolosComponent">
            @await Component.InvokeAsync(nameof(MenuGaolosLibrary.MenuGaolosComponent))
        </aside>

        <main class="layout__content">
            <header id="MenuUsuarioComponent">
                @await Component.InvokeAsync(nameof(MenuUsuarioLibrary.MenuUsuarioComponent))
            </header>
            @RenderBody()
        </main>

        <aside class="layout__aside layout__columns" id="MenuNotificacionesComponent">
            @await Component.InvokeAsync(nameof(MenuNotificacionesLibrary.MenuNotificacionesComponent))
        </aside>

    </div>

    @* Gaolos Section Scripts *@
    <script src="~/js/nodos.js" asp-append-version="true"></script>
    <script src="~/js/cms-documentos.js" asp-append-version="true"></script>

    <script>
        RefreshCounters();
    </script>

</body>
</html>