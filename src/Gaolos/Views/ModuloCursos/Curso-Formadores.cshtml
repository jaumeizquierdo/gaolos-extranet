@model CursosLibrary.ModuloCursosCursoDetallesEditar_FormadoresViewModel
@{
    Layout = "~/Views/Shared/Modulo-Cursos/_Cursos-curso.cshtml";
    ViewData["Title"] = "Formadores";
    ViewData["Message"] = "Modulo de cursos - Gaolos App v2017";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section mb-0">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

@if(Model.Model.Err.eserror)
{
    ViewData["err"] = Model.Model.Err.mensaje;
    @Html.Partial("AccesoDenegado");
}
else
{
    @* tabs *@

    @Html.Partial("Curso-Tabs")

    @* cabecera *@

    @Html.Partial("Curso-Cabecera")

                <div class="row">
                    <div class="col-4">
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Formadores</span>
                            </div>
                            <div class="card-block">
                                <table class="table table-striped table-select">
                                    <thead>
                                        <tr>
                                            <th class="">Formador</th>
                                            <th class="w-20 text-center">Evaluado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Model.det != null)
                    {
                        @for (Int32 t = 0; t < Model.Model.det.Length; t++)
    {
                    <tr>
                        <td><p class="mb-0"><a href="#" id="prof_@Model.Model.det[t].ID_Prof2" class="fw-5 obtener-formador">@Model.Model.det[t].Formador</a></p></td>
                        <td class="text-center">
                            @if (Model.Model.det[t].Eva)
    {
                        <i class="fa fa-check text-success"></i>
}
else
{
                        <i class="fa fa-exclamation-circle mr-1 text-danger"></i>
}


                        </td>
                    </tr>
}

}
else
{
                    <tr>
                        <td colspan="2">
                            <p class='fw-5 text-danger mb-0'><i class='fa fa-exclamation-circle mr-1'></i> No hay resultados</p>
                        </td>
                    </tr>
}

                                    </tbody>
                                </table>
                            </div>
                        </div>



                    </div>
                    <div class="col-8">
                        <div class="card card-table mb-3" style="display:none;" id="verform">
                            <div class="card-header card-header-options">
                                <span id="formador"></span>
                                <input type="hidden" id="ID_Prof2" value="" />
                                <input type="hidden" id="ID_NFC" value="" />
                            </div>
                            <div class="card-block">
                                <table class="table table-striped table-select">
                                    <thead>
                                        <tr>
                                            <th class="w-50">Explicación</th>
                                            <th class="">Comentario</th>
                                            <th class="text-center">No procede</th>
                                            <th class="w-10">Puntuación</th>
                                        </tr>
                                    </thead>
                                    <tbody id="content">
                                    </tbody>
                                </table>
                            </div>
                        </div>



                    </div>
                </div>


}
            </div>
        </div>
    </div>
</div>