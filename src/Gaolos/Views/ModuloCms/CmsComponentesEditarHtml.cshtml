@model CmsLibrary.CmsWebComponentesComponenteHtmlViewModel
@{
    Layout = "~/Views/Shared/Modulo-Cms/_CmsComponentesEditor.cshtml";
    ViewData["Title"] = "Web Componentes";
    ViewData["Message"] = "CMS - Gaolos App v2017";
}

<div class="main-content">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                
                    @if (Model.Model.Err.eserror)
                    {
                        ViewData["err"] = Model.Model.Err.mensaje;
                        @Html.Partial("AccesoDenegado");
                    }
                    else
                    {
                

                @* Buscar *@

                <div class="card mb-3">
                    <div class="card-header card-header-options">
                        <span>Editar Componente</span>

                        <div class="card-actions">
                            <ul>
                                <li><i class="fa fa-bars"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">

                        <div class="row">
                            <div class="col-2 text-center">
                                <img src="~/flaticons/settings-1.svg" style="width: 50%">
                            </div>
                            <div class="col-9">
                                <h4 class="fw-5">Editar componente</h4>
                                <p class="fw-5 mb-0 mt-2">Breve: <span class="text-info">@Model.Model.datoS1</span></p>
@{ 
    string txt = "$Com_" + Model.Model.datoI.ToString() + "_Com$";
}
                                <p class="fw-5 mb-0 mt-2">Variable: <span class="text-info">@Html.Raw(txt)</span></p>
                            </div>
                        </div>

                    </div>
                </div>

                @* Edición componente *@

                <div class="row" id="">

                    <div class="col-12">

                        @*[Edición de componentes]*@
                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Edición del componente</span>
                                @Html.Partial("PanelActions")
                            </div>
                            <div class="card-block">
                                <div class="form-group">
                                    <label for="CustomComponentsTextArea" class="d-flex justify-content-between align-items-center">
                                        <span>Insertar código:</span>
                                        <a href="#" class="btn btn-secondary btn-sm fw-5 ml-3" data-container="body" data-toggle="popover" data-placement="top" data-content="Archivos JS que se cargan en el final del documento"><i class="fa fa-question"></i></a>
                                    </label>
                                    <div id="CustomComponentsTextArea" class="editor" style="height: 700px;">@Model.Model.datoS2</div>
                                </div>
                                <div class="row justify-content-center">
                                    <input type="hidden" id="ID_Compo2" value="@Model.Model.datoI" />
                                    <button type="button" class="btn btn-primary form-custom-html btn-sm guardar-componente-html">Guardar</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                
    }
                
            </div>
        </div>
    </div>
</div>
