                                    <div class="mt-3" id="db-fra-prov_text">
                                        <div class="text-center"><img src="~/images/loading-rolling.svg" style="width: 30%" /></div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Movimientos de cuentas *@
