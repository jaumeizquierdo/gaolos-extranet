                                    <div class="card-actions">
                                        <ul>
                                            <li>
                                                <a href="#" class="handle"><i class="fa fa-bars"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <table class="table-condensed table-striped w-100 calendario-tareas" id="Calendario-Tareas"></table>
                                </div>
                            </div>


                            @* Día *@

                            <div class="card mb-3" style="display:none;" id="dia_carga">
                                <div class="card-header card-header-options">
                                    <span id="dia_txt"></span>
                                </div>
                                <div class="card-block card-table p-0">
                                    <div class="d-flex">
                                        <table class="table table-striped p-0 mb-0">
