@model ModuloClientesLibrary.ModuloClientesClienteBloqueoViewModel
@{
    Layout = "~/Views/Shared/Modulo-Clientes/_Modulo-Clientes-Cliente.cshtml";
    ViewData["Title"] = "Bloqueo de cliente";
    ViewData["Message"] = "Modulo de Clientes - Gaolos App v2017";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

@if(Model.Model.Err.eserror)
{
    ViewData["err"] = Model.Model.Err.mensaje;
    @Html.Partial("AccesoDenegado");
}
else
{

                @* cabecera cliente *@

                @Html.Partial("Cliente-Cabecera")

                @* tabs *@

                @Html.Partial("Cliente-Tabs")

                @* Listado de direcciones *@

                <div class="row">
                    <div class="col-6">
                        @if (Model.Model.Blo)
                        {
                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Bloqueo ficha</span>
                            </div>
                            <div class="card-block p-0">

                                <div class="d-flex flex-column p-2">
                                    <div class="box-labels">
                                        <div class="d-flex align-items-center align-self-stretch box-labels-divider">
                                            <label class="m-0 box-label-label align-self-stretch" style="width: 100px;">Bloqueado</label>
                                            <p></p>
                                            <p class="mb-0 px-2 text-danger fw-5">@Model.Model.Fe_Blo - @Model.Model.UsuBlo</p>
                                        </div>
                                        <div class="d-flex align-items-center align-self-stretch">
                                            <label class="m-0 box-label-label align-self-stretch" style="width: 100px;">Motivo</label>
                                            <p class="mb-0 px-2">@Model.Model.MotBlo</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                    <button type="button" class="btn btn-sm btn-primary cliente-desbloquear">Desbloquear</button>
                                </div>
                            </div>
                        </div>
                        }
                        else
                        {
                            <div class="card mb-3">
                                <div class="card-header card-header-options">
                                    <span>Bloqueo ficha</span>
                                </div>
                                <div class="card-block p-0">

                                    <div class="p-3">
                                        <div class="input-group input-group-sm mb-1">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text input-group-text-auto">Motivo bloqueo</span>
                                            </div>
                                            <textarea class="form-control" rows="4" placeholder="Motivo bloqueo ficha" id="MotBaj"></textarea>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                        <button type="button" class="btn btn-sm btn-primary cliente-bloquear">Bloquear</button>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                    <div class="col-6">
                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Baja cliente</span>
                            </div>
                            <div class="card-block p-0">

                                @if (Model.Model.Blo)
                                {
                                    <div class="d-flex justify-content-center box-border-top p-4">
                                        <button type="submit" class="btn btn-primary btn-danger cliente-baja"><i class="fa fa-exclamation-triangle mr-2"></i> Baja definitiva del cliente</button>
                                    </div>
                                }
                                else
                                {
                                    <div class="card-info-wrapper w-100">
                                        <div class="card-info py-2 px-3">
                                            <div class="d-flex justify-content-center align-items-center">
                                                <img src="https://image.flaticon.com/icons/svg/609/609998.svg" style="width: 14%;">
                                                <p class="mb-2 ml-3">Para dar de baja al cliente primero tiene que <span class="fw-5">bloquearlo</span> e indicar un motivo</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                        <button type="submit" class="btn btn-sm btn-primary" disabled>Baja cliente</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                </div>
}
</div>
        </div>
    </div>
</div>

