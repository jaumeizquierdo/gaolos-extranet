                <div class="row">
                    <div class="col-6">
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Entradas y salidas de hoy</span>
                            </div>
                            <div class="card-block">

                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th class="">Usuario</th>
                                            <th class="w-15 text-center">Inicio</th>
                                            <th class="w-15 text-center">Fin</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Model.Hoy != null)
                                        {
                                        @for (Int32 t = 0; t < Model.Model.Hoy.Length; t++)
                                            {
                                        <tr>
                                            <td><p class="mb-0 fs-0-8"><small>@Model.Model.Hoy[t].datoS1</small></td>
