@model ModuloArticulosLibrary.ModuloArticulosArticulo_PreciosViewModel
@{
    Layout = "~/Views/Shared/Modulo-Articulos/_Modulo-Articulos-Articulo.cshtml";
    ViewData["Title"] = "Artículo";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if (Model.Model.Err.eserror)
                {
                    ViewData["err"] = Model.Model.Err.mensaje;
                @Html.Partial("AccesoDenegado");
                }
                else
                {

                @* Artículos Cabecera *@

                @Html.Partial("Articulo-Cabecera")

                @* Artículos Tabs *@

                @Html.Partial("Articulo-Tabs")

                @* Listado de usuarios *@

                <div class="row">

                    <div class="col-4">

                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Precios</span>
                            </div>
                            <div class="card-block p-0">
                                <div class="d-flex mb-0 p-2">

                                    <div class="d-flex flex-column w-100">
                                        <div class="input-group input-group-sm mb-1">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Precio</span>
                                            </div>
                                            <input type="text" class="form-control" id="Precio" aria-describedby="" value="@Model.Model.Precio" placeholder="Precio">
                                        </div>
                                        @if (Model.Model.numTafi > 0)
                                        {
                                            for (Int32 t = 0; t < Model.Model.Tarifas.Length; t++)
                                            {
                                                <div class="input-group input-group-sm mb-1">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">@Model.Model.Tarifas[t].datoS1</span>
                                                    </div>
                                                    <input type="text" class="form-control tari-art" id="tari_@Model.Model.Tarifas[t].datoI" aria-describedby="" value="@Model.Model.Tarifas[t].datoS2" placeholder="@Model.Model.Tarifas[t].datoS1">
                                                </div>
                                            }
                                        }
                                                <div class="d-flex justify-content-center mt-2">
                                                    <button type="button" class="btn btn-sm btn-primary guardar-art-precios">Guardar</button>
                                                </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="col-4">

                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Precio mínimo</span>
                            </div>
                            <div class="card-block p-0">

                                <div class="d-flex flex-column p-2">

                                    <div class="input-group input-group-sm mr-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Precio mínimo</span>
                                        </div>
                                        <input type="text" class="form-control" id="PrecioMin" aria-describedby="" value="@Model.Model.PrecioMin" placeholder="Precio mínimo">
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="col-4">

                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>IVA</span>
                            </div>
                            <div class="card-block p-0">

                                <div class="d-flex flex-column p-2">

                                    <div class="input-group input-group-sm mr-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Tipo IVA</span>
                                        </div>
                                        <input type="text" class="form-control" id="IVA" aria-describedby="" value="@Model.Model.IVA" placeholder="Tipo IVA">
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>


                }
            </div>
        </div>
    </div>
</div>