                                                    <option value="2">Pagos</option>
                                                </select>
                                                <span class="input-group-append">
                                                    <button type="submit" class="btn btn-primary btn-sm form-buscar"><i class="fa fa-search"></i></button>
                                                </span>
                                            </div>

                                            <div class="input-group input-group-sm mb-0 mr-2">
