
@{
    ViewData["Title"] = "Órdenes de producción";
    ViewData["TitleOrdenesProduccionAbiertas"] = "Órdenes de producción abiertas";
    Layout = "~/Views/Shared/Modulo-Produccion/_ProduccionOrdenes.cshtml";
}
<div class="main-content m-0" id="widget-area">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                @* Buscador *@
                <div class="card mb-3">
                    <div class="card-header card-header-options">
                        <span>Buscar </span>

                        <div class="card-actions">
                            <ul>
                                <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-block p-0">

                        <form action="@ViewData["Form"]" method="post" class="">
                            <div class="d-flex justify-content-center align-items-center">
                                <div class="col-1 pb-2 pt-2">
                                    <img src="https://image.flaticon.com/icons/svg/427/427132.svg" style="width: 100%;">
                                </div>
                                <div class="col-11 box-border-left-light">

                                    <div class="row p-0">
                                        <div class="col-12 p-0">
                                            <div class="d-flex mb-0 px-3 pt-3 mb-2">
                                                <div class="form-group mb-2 mr-2 col-12 p-0">
                                                    <label>Buscar</label>
                                                    <input type="text" class="form-control" placeholder="Buscar ..." name="buscar" value="@ViewData["buscar"]">
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-center mt-2 box-border-top mdc-bg-blue-grey-50 pt-2 pb-2">
                                                <button type="submit" class="btn btn-sm btn-primary">Buscar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>

                <div class="row">
                    <div class="col-8">
                        <div class="card mb-3 card-table">
                            <div class="card-header card-header-options">
                                <span>Órdenes con incidencia</span>

                                <div class="card-actions">
                                    <ul>
                                        <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-block">
                                <table class="table table-striped">

                                    <thead>
                                        <tr>
                                            <th class="text-center w-10">Fecha</th>
                                            <th>Cliente</th>
                                            <th class="text-center">Nº Orden</th>
                                            <th>Usuario</th>
                                            <th>Incidencia</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td class="text-center"><a href="#" class="fw-5">24/04/2018</a></td>
                                            <td>MALLA SCREEN DORST</td>
                                            <td class="text-center"><a href="#" class="fw-5">2715</a></td>
                                            <td>Enzo Mazzariello</td>
                                            <td>cambio de faena</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card card-table mb-3" id="" style="display: block;">
                            <div class="card-header card-header-options">
                                <span>Resolución</span>
                            </div>
                            <div class="card-block p-0">
                                <div class="d-flex flex-column p-2">
                                    <div class="input-group input-group-sm mb-1">
                                        <textarea class="form-control" id="" aria-describedby="basic-addon3" placeholder="Resolución" rows="4"></textarea>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                    <a href="#" class="btn btn-sm btn-primary inscripcion-contacto-guardar">Guardar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="mb-3">
                    @* Paginador *@

                </div>
            </div>
        </div>
    </div>
</div>