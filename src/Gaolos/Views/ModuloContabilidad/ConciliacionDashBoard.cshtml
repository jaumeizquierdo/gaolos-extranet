                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Pasarelas Banco *@
                    <div class="card mb-3">
                        <div class="card-header card-header-options">
                            <a class="fs-1-1 fw-4" href="/modulo-contabilidad/conciliacion/pasarelas">@ViewData["TitlePasarelaPago"]</a>

