@model ModuloTransporteLibrary.ModuloTransporteTransporteLocalizacionesListadoViewModel

@{
    Layout = "~/Views/Shared/Modulo-Transporte/_Modulo-Transporte.cshtml";
    ViewData["Title"] = "Listado de localizaciones";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if(Model.Model.Err.eserror)
    {
        ViewData["err"] = Model.Model.Err.mensaje;
                @Html.Partial("AccesoDenegado");
    }
    else
    {

                @* Buscar usuarios *@

                <div class="card mb-3">
                    <div class="card-header card-header-options">
                        <span>Buscar modalidad</span>

                        <div class="card-actions">
                            <ul>
                                <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block p-0">

                        <form action="@ViewData["Form"]" method="post">
                            <div class="d-flex justify-content-center align-items-center">
                                <div class="col-1  pb-2 pt-2">
                                    <img src="https://image.flaticon.com/icons/svg/321/321863.svg" style="width: 100%;">
                                </div>
                                <div class="col-11 box-border-left-light">

                                    <div class="row p-0">
                                        <div class="col-12 box-border-right p-0">
                                            <div class="d-flex mb-0 px-3 pt-3 mb-2">
                                                <div class="form-group mb-0 mr-2 col-12 p-0">
                                                    <label>Buscar</label>
                                                    <input type="text" class="form-control" placeholder="Buscar" name="buscar" value="@ViewData["buscar"]">
                                                </div>
                                            </div>
                                            <div class="d-flex mt-3 px-3">

                                                @*<div class="d-flex justify-content-center align-items-center mr-3">
                                                        <label class="mb-0">Sin precio</label>
                                                        <input name="SinPrecio" type="checkbox" class="ml-1" @{ if (ViewData["SinPrecio"].ToString() != "") { @Html.Raw(" checked ")  } }>
                                                    </div>

                                                    <div class="d-flex justify-content-center align-items-center mr-3">
                                                        <label class="mb-0">Sin precio mínimo</label>
                                                        <input name="SinPrecioMin" type="checkbox" class="ml-1" @{ if (ViewData["SinPrecioMin"].ToString() != "") { @Html.Raw(" checked ")  } }>
                                                    </div>

                                                    <div class="d-flex justify-content-center align-items-center mr-3">
                                                        <label class="mb-0">Sin categoría</label>
                                                        <input name="SinCat" type="checkbox" class="ml-1" @{ if (ViewData["SinCat"].ToString() != "") { @Html.Raw(" checked ")  } }>
                                                    </div>

                                                    <div class="d-flex justify-content-center align-items-center mr-3">
                                                        <label class="mb-0">Sin código</label>
                                                        <input name="SinCod" type="checkbox" class="ml-1" @{ if (ViewData["SinCod"].ToString() != "") { @Html.Raw(" checked ")  } }>
                                                    </div>

                                                    <div class="d-flex justify-content-center align-items-center">
                                                        <label class="mb-0">Sin impuestos</label>
                                                        <input name="SinImpu" type="checkbox" class="ml-1" @{ if (ViewData["SinImpu"].ToString() != "") { @Html.Raw(" checked ")  } }>
                                                    </div>*@

                                            </div>
                                            <div class="d-flex justify-content-center mt-2 box-border-top mdc-bg-blue-grey-50 pt-2 pb-2">
                                                <button type="submit" class="btn btn-sm btn-primary">Buscar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>


                <div class="row">

                    <div class="col-8">
                        @* Listado de servicios *@
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>@ViewData["Title"]</span>
                                <div class="input-group input-group-sm col-5 mr-0 px-0">
                                    @*<div class="input-group-append">
                                            <a href="/modulo-servicios/servicios/exportar" class="btn btn-primary btn-sm mr-2">Exportar en CSV</a>
                                        </div>*@
                                    @*<input type="text" class="form-control" value="" placeholder="Nuevo servicio" id="" name="">
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-primary btn-sm">Nuevo</button>
                                        </div>*@
                                </div>
                            </div>
                            <div class="card-block">

                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Transportista</th>
                                            <th class="w-10">Tipo envío</th>
                                            <th class="w-30">Destino</th>
                                            <th class="w-30">Origen</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Model.det != null)
{
                                        @for (Int32 t = 0; t < Model.Model.det.Length; t++)
{
                                        <tr>
                                            <td class="">
                                                <p class="fw-5 mb-0"><a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ir al servicio" class="fw-5">@Model.Model.det[t].Trans</a></p>
                                            </td>
                                            <td class="">
                                                <p class="fw-5 mb-0">@Model.Model.det[t].Tipo</p>
                                            </td>
                                            <td class="">
                                                @if (Model.Model.det[t].Pai_Des != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Pai_Des</p>
                                                }
                                                @if (Model.Model.det[t].Est_Des != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Est_Des</p>
                                                }
                                                @if (Model.Model.det[t].Reg_Des != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Reg_Des</p>
                                                }
                                                @if (Model.Model.det[t].Pro_Des != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Pro_Des</p>
                                                }
                                                @if (Model.Model.det[t].CP_Des != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].CP_Des</p>
                                                }
                                                @if (Model.Model.det[t].Pob_Des != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Pob_Des</p>
                                                }
                                            </td>
                                            <td class="">
                                                @if (Model.Model.det[t].Pai_Ori != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Pai_Ori</p>
                                                }
                                                @if (Model.Model.det[t].Est_Ori != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Est_Ori</p>
                                                }
                                                @if (Model.Model.det[t].Reg_Ori != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Reg_Ori</p>
                                                }
                                                @if (Model.Model.det[t].Pro_Ori != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Pro_Ori</p>
                                                }
                                                @if (Model.Model.det[t].CP_Ori != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].CP_Ori</p>
                                                }
                                                @if (Model.Model.det[t].Pob_Ori != "")
                                                {
                                                    <p class="fw-5 mb-0">@Model.Model.det[t].Pob_Ori</p>
                                                }
                                                @if (Model.Model.det[t].EstIgual)
                                                {
                                                    <p class="fw-5 mb-0">Mismo estado</p>
                                                }
                                                @if (Model.Model.det[t].RegIgual)
                                                {
                                                    <p class="fw-5 mb-0">Misma región</p>
                                                }
                                                @if (Model.Model.det[t].ProIgual)
                                                {
                                                    <p class="fw-5 mb-0">Misma provincia</p>
                                                }
                                            </td>
                                        </tr>
}

}
else
{
                                        <tr><td colspan="4"><p class='fw-5 text-danger mb-0'><i class='fa fa-exclamation-circle mr-1'></i> No hay resultados</p></td></tr>

}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="mb-3">
                            @Html.Raw(Model.Model.Paginador)
                        </div>

                    </div>

                    <div class="col-4" id="sindatos">

                        @* Sin datos *@
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Información</span>
                                <div class="card-actions">
                                    <ul>
                                        <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-block" role="tablist" aria-multiselectable="true">
                                <div class="text-center mt-4 mb-4 p-5 bloque-sin-informacion">
                                    <img src="~/flaticons/chat.svg" style="width: 25%;">
                                    <p class="pt-4 fw-5">Si clica encima del tipo de envío, accederá a modificarlo</p>
                                </div>
                            </div>
                        </div>


                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Modalidad</span>
                                <input type="hidden" id="ID_Tipo" value="0" />
                            </div>

                            <div class="card-block p-2">

                                <div class="d-flex mb-1">
                                    <div class="input-group input-group-sm mb-0 p-0">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Transportista</span>
                                        </div>
                                        <input type="text" class="form-control form-control-sm" placeholder="Transportista" value="" id="">
                                    </div>
                                </div>

                                <div class="d-flex mb-1">
                                    <div class="input-group input-group-sm mb-0 p-0">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Tipo</span>
                                        </div>
                                        <input type="text" class="form-control form-control-sm" placeholder="Tipo envío" value="" id="TipoEnvio">
                                    </div>
                                </div>

                                <div class="d-flex mb-1">
                                    <div class="box-labels mr-2 w-50">
                                        <div class="d-flex align-items-center align-self-stretch">
                                            <div class="input-group input-group-sm mb-0 p-0">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">Durada (H)</span>
                                                </div>
                                                <input type="text" class="form-control form-control-sm" placeholder="Durada en horas" value="" id="HoraCorte">
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="box-labels w-50">
                                            <div class="d-flex align-items-center align-self-stretch">
                                                <div class="input-group input-group-sm mb-0 p-0">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">Importe gratis</span>
                                                    </div>
                                                    <input type="text" class="form-control form-control-sm" placeholder="Importe gratis" value="" id="ImpGratis">
                                                </div>
                                            </div>
                                        </div>*@
                                </div>

                                <div class="d-flex mb-1">
                                    <div class="input-group input-group-sm mb-0 p-0">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Información privada</span>
                                        </div>
                                        <textarea class="form-control form-control-sm" rows="4" placeholder="Información privada" value="" id="Obs"></textarea>
                                    </div>
                                </div>

                                <div class="d-flex mb-1">
                                    <div class="input-group input-group-sm mb-0 p-0">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Información cliente</span>
                                        </div>
                                        <textarea class="form-control form-control-sm" rows="4" placeholder="Información cliente" value="" id="Obs"></textarea>
                                    </div>
                                </div>

                            </div>
                            <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                <button type="button" class="btn btn-sm btn-primary">Guardar</button>
                            </div>
                        </div>


                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Eliminar modalidad</span>
                            </div>
                            <div class="card-block p-0">
                                <div class="d-flex flex-column p-2">
                                    <div class="form-group mb-0">
                                        <p>No puede ser eliminado</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center box-guardar">
                                    <a href="#" target="_blank" class="btn btn-sm btn-danger baja-mantenimiento-xx">Eliminar</a>
                                </div>

                            </div>
                        </div>




                    </div>

                </div>

    }
            </div>
        </div>
    </div>
</div>


