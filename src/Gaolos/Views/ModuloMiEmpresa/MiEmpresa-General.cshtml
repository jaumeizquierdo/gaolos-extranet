                                    <thead>
                                        <tr>
                                            <th class="w-25">Web</th>
                                            <th>Observaciones</th>
                                            <th class="text-center w-10">Predeterminado<span data-toggle="tooltip" data-placement="top" title="" data-original-title=""></span></th>
                                            <th class="text-center w-5"><i class="fa fa-times"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Model.Webs != null)
                                            {
                                                for (Int32 t = 0; t < Model.Model.Webs.Length; t++)
                                                {
                                        <tr>
                                            <td><a href="#" class="fw-5 sel-web" id="Web_@Model.Model.Webs[t].datoI">@Model.Model.Webs[t].datoS1</a></td>
                                            <td>@Model.Model.Webs[t].datoS2</td>
                                            <td class="text-center">
                                                <input name="EsWeb" id="es-com_@Model.Model.Webs[t].datoI" class="sel-web-pred" type="radio" @if (Model.Model.Webs[t].datoB) { @Html.Raw("checked")  }>
