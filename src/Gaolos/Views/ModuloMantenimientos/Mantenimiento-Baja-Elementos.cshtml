@model ModuloMantenimientosLibrary.ModuloMantenimientosMantenimientoDetallesViewModel

@{
    Layout = "~/Views/Shared/Modulo-Mantenimientos/_Modulo-MantenimientoBaja.cshtml";
    ViewData["Title"] = "Elementos";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if (Model.Model.Err.eserror)
    {
        ViewData["err"] = Model.Model.Err.mensaje;
                @Html.Partial("AccesoDenegado");
}
else
{

                @* cabecera mantenimiento *@

                @Html.Partial("Mantenimiento-Cabecera")

                @* tabs *@

                @Html.Partial("Mantenimiento-Tabs-Baja")

                <div class="row">

                    <div class="col-12">

                        @* Elementos *@

                        @{
            Int32 num = 0;
            if (Model.Model.det != null)
            {
                num = Model.Model.det.Length;
            }
                        }


                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Elementos (@num)</span>
                            </div>
                            <div class="card-block">
                                <table class="table table-striped table-select">
                                    <thead>
                                        <tr>
                                            <th class="">Elemento</th>
                                            <th class="w-10">Nº Serie</th>
                                            <th class="w-10">Ref.Int.</th>
                                            <th class="w-5">Año</th>
                                            <th class="">Ubicación</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Model.det != null)
                                    {
                                        for (Int32 t = 0; t < Model.Model.det.Length; t++)
                                        {
                                        <tr>
                                            <td><p class="mb-0">@Model.Model.det[t].Breve</p></td>
                                            <td><p class="mb-0 text-left">@Model.Model.det[t].Bastidor</p></td>
                                            <td><p class="mb-0 text-left">@Model.Model.det[t].RefInt</p></td>
                                            <td><p class="mb-0 text-left">@Model.Model.det[t].Año</p></td>
                                            <td><p class="mb-0"><small>@Model.Model.det[t].Ubi</small></p></td>
                                        </tr>
                                        }

                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5"><p class='fw-5 text-danger mb-0'><i class='fa fa-exclamation-circle mr-1'></i> No hay resultados</p></td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-12 col-lg-6 col-sm-12">



                    </div>

                </div>


}
            </div>
        </div>
    </div>
</div>
