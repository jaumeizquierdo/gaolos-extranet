@model ModuloClientesLibrary.ModuloClientesClienteFiscalViewModel
@{
    Layout = "~/Views/Shared/Modulo-Contactos/_Modulo-Contactos-Contacto.cshtml";
    ViewData["Title"] = "BLOQUEO";
    ViewData["Message"] = "Modulo de Contactos - Gaolos App v2017";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if(Model.Model.Err.eserror)
{
    ViewData["err"] = Model.Model.Err.mensaje;
                @Html.Partial("AccesoDenegado");
}
else
{

                @* cabecera cliente *@

                @Html.Partial("Contacto-Cabecera")

                @* tabs *@

                @Html.Partial("Contacto-Tabs")


                @* Listado de direcciones *@

                <div class="row">
                    <div class="col-6">
                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Bloqueo ficha</span>
                            </div>
                            <div class="card-block p-0">

                                <div class="p-3">
                                    <div class="form-group mb-0">
                                        <label>Motivo bloqueo ficha</label>
                                        <textarea class="form-control" rows="4" placeholder="Motivo bloqueo ficha" id=""></textarea>
                                    </div>
                                    <div class="form-check mt-2">
                                        <input type="checkbox" class="form-check-input" id="">
                                        <label class="form-check-label" for="">Bloquear ficha</label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                    <button type="submit" class="btn btn-sm btn-primary">Bloquear</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Baja cliente</span>
                            </div>
                            <div class="card-block p-0">

                                <div class="p-3">
                                    <div class="form-group mb-0">
                                        <label>Motivo baja</label>
                                        <textarea class="form-control" rows="4" placeholder="Motivo baja" id=""></textarea>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center box-border-top p-2 mdc-bg-blue-grey-50">
                                    <button type="submit" class="btn btn-sm btn-primary">Baja cliente</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
}
            </div>
        </div>
    </div>
</div>

