@model MiEmpresaLibrary.MiEmpresaMiEmpresa_GeneralViewModel
@{
    Layout = "~/Views/Shared/Modulo-Mi-Empresa/_MiEmpresa.cshtml";
    ViewData["Title"] = "Mi Empresa";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if (Model.Model.Err.eserror)
                {
                    ViewData["err"] = Model.Model.Err.mensaje;
                @Html.Partial("AccesoDenegado");
                }
                else
                {

                @* cabecera empresa *@

                @Html.Partial("MiEmpresa-Cabecera")

                @* tabs *@

                @Html.Partial("MiEmpresa-Tabs")

                @* Listado de direcciones *@

                <div class="row">
                    <div class="col-9">

                        @* Direcciones *@
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                @if (Model.Model.Dirs != null)
                                    {
                                @if (Model.Model.Dirs.Length > 1)
                                        {
                                <span>Direcciones [@Model.Model.Dirs.Length localizadas]</span>
                                        }
                                        else
                                        {
                                <span>Direcciones [@Model.Model.Dirs.Length localizada]</span>
                                        }
                                    }
                                    else
                                    {
                                <span>Direcciones [0 localizadas]</span>
                                    }
                                <button type="button" class="btn btn-primary btn-sm nueva-dir btn-sm-2x">Nueva</button>
                            </div>

                            <div class="card-block">

                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th class="w-25">Dirección</th>
                                            <th>Población</th>
                                            <th>Provincia</th>
                                            <th class="text-center w-7">Código Postal</th>
                                            <th>País</th>
                                            <th class="text-center w-7">Dir. com. <span data-toggle="tooltip" data-placement="top" title="" data-original-title=""></span></th>
                                            <th class="text-center w-7">Dir. fiscal <span data-toggle="tooltip" data-placement="top" title="" data-original-title=""></span></th>
                                            <th class="text-center w-5"><i class="fa fa-times"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Model.Dirs != null)
                                            {
                                                for (Int32 t = 0; t < Model.Model.Dirs.Length; t++)
                                                {
                                        <tr>
                                            <td>

                                                <a href="#" class="fw-5 sel-dir" id="dir_@Model.Model.Dirs[t].ID_Dir" data-toggle="tooltip" data-placement="top" title="" data-original-title="Modificar dirección">@Model.Model.Dirs[t].Dir</a>
                                            </td>

                                            <td>@Model.Model.Dirs[t].Pob</td>
                                            <td>@Model.Model.Dirs[t].Pro</td>
                                            <td class="text-center">@Model.Model.Dirs[t].CP</td>
                                            <td>@Model.Model.Dirs[t].Pai</td>

                                            <td class="text-center">
                                                <input name="EsCom" class="sel-dir-com" id="dircom_@Model.Model.Dirs[t].ID_Dir" type="radio" @if (Model.Model.Dirs[t].EsCom) { @Html.Raw("checked")  }>
                                            </td>
                                            <td class="text-center">
                                                <input name="EsFis" class="sel-dir-fis" id="dirfis_@Model.Model.Dirs[t].ID_Dir" type="radio" @if (Model.Model.Dirs[t].EsFis) { @Html.Raw("checked")  }>
                                            </td>
                                            <td class="text-center"><a href="#" class="text-danger mi-empresa-dir-eliminar" id="dirdel_@Model.Model.Dirs[t].ID_Dir"><i class="fa fa-times"></i></a></td>
                                        </tr>
                                                }
                                            }
                                            else
                                            {
                                        <tr><td colspan="9"><p class='fw-5 text-danger mb-0'><i class='fa fa-exclamation-circle mr-1'></i> No hay resultados</p></td></tr>

                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @* Teléfonos *@
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                @if (Model.Model.Tels != null)
                                    {
                                @if (Model.Model.Tels.Length > 1)
                                        {
                                <span>Teléfonos [@Model.Model.Tels.Length localizados]</span>
                                        }
                                        else
                                        {
                                <span>Teléfonos [1 localizado]</span>
                                        }
                                    }
                                    else
                                    {
                                <span>Teléfonos [0 localizados]</span>
                                    }
                                <button type="button" class="btn btn-primary btn-sm btn-sm-2x nuevo-tel">Nuevo</button>
                            </div>

                            <div class="card-block">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th class="w-25">Teléfono</th>
                                            <th>Observaciones</th>
                                            <th class="text-center w-10">Teléfono <span data-toggle="tooltip" data-placement="top" title="" data-original-title=""></span></th>
                                            <th class="text-center w-10">Fax <span data-toggle="tooltip" data-placement="top" title="" data-original-title=""></span></th>
                                            <th class="text-center w-5"><i class="fa fa-times"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Model.Tels != null)
                                            {
                                                for (Int32 t = 0; t < Model.Model.Tels.Length; t++)
                                                {
                                        <tr>
                                            <td><a href="#" class="mr-1 copy" data-clipboard-text="@Model.Model.Tels[t].datoS1"><i class="fa fa-clipboard"></i> <a href="#" class="fw-5 sel-tel" id="Tel_@Model.Model.Tels[t].datoI">@Model.Model.Tels[t].datoS1</a></td>
                                            <td>@Model.Model.Tels[t].datoS2</td>
                                            <td class="text-center">
                                                <input name="TelPred" id="tel-pred_@Model.Model.Tels[t].datoI" class="mi-empresa-tel-pred" type="radio" @if (Model.Model.Tels[t].datoB) { @Html.Raw("checked")  }>
                                            </td>
                                            <td class="text-center">
                                                <input name="FaxPred" id="fax-pred_@Model.Model.Tels[t].datoI" class="mi-empresa-fax-pred" type="radio" @if (Model.Model.Tels[t].datoS3 != "") { @Html.Raw("checked")  }>
                                            </td>
                                            <td class="text-center"><a href="#" class="text-danger cliente-tel-eliminar" id="tel-eli_@Model.Model.Tels[t].datoI"><i class="fa fa-times"></i></a></td>
                                        </tr>
                                                }
                                            }
                                            else
                                            {
                                        <tr><td colspan="4"><p class='fw-5 text-danger mb-0'><i class='fa fa-exclamation-circle mr-1'></i> No hay resultados</p></td></tr>
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        @* Mails *@
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                @if (Model.Model.Mails != null)
                                    {
                                @if (Model.Model.Mails.Length > 1)
                                        {
                                <span>Mails [@Model.Model.Mails.Length localizados]</span>
                                        }
