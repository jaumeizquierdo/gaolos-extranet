@model ModuloBibliotecaLibrary.ModuloBibliotecaDocumentosDocumentoViewModel

@{
    Layout = "~/Views/Shared/Modulo-Biblioteca/_Modulo-Biblioteca.cshtml";
    ViewData["Title"] = "Documentos privados - Listado de documentos";
    ViewData["Title-Bloque-1"] = "Biblioteca";
    ViewData["Message"] = "Biblioteca - Gaolos App v2017";
}

<div class="main-content m-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @* Título documento *@

                <div class="card mb-3">
                    <div class="card-header card-header-options">
                        <span>Documento: [ @Model.Model.Titulo ]</span>
                        <div class="card-actions">
                            <ul>
                                <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-block p-0">
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="col-1 text-center py-2">
                                <img src="~/flaticons/startup-1.svg" style="width: 100%;">
                            </div>
                            <div class="col-11 box-border-left-light">

                                <div class="row p-0">
                                    <div class="col-12 p-0">
                                        <div class="d-flex flex-column mb-0 p-3">

                                            <h4 class="fw-5">@Model.Model.Titulo</h4>
                                            <p class="mb-0"><small class="fw-5">Alta: <span class="text-info">@Model.Model.Fe_Al_Doc - @Model.Model.Usu_Al_Doc</span></small></p>
                                            <p class="mb-0"><small class="fw-5">Tipo: <span class="text-info">@Model.Model.Tipo</span></small></p>
                                            <p class="mb-0"><small class="fw-5">Peso total: <span class="text-info">@Model.Model.Tam_Tot</span></small></p>
                                            <p class="mb-0"><small class="fw-5">Última modificación: <span class="text-info">@Model.Model.Fe_Ul - @Model.Model.Usu_Ul</span></small></p>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-6">

                @* Editar información básica documento*@

                <div class="card mb-3">
                    <div class="card-header card-header-options">
                        <span>Editar documento</span>
                        <div class="card-actions">
                            <ul>
                                <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="form-group">
                            <label for="">Título del documento</label>
                            <input type="text" class="form-control" id="Titulo" placeholder="Título del documento" value="@Model.Model.Titulo">
                        </div>
                        <div class="form-group">
                            <label for="">Exposición</label>
                            <textarea class="form-control" id="Expo" rows="3" placeholder="Exposición">@Model.Model.Expo</textarea>
                        </div>
                        <div class="form-group">
                            <label for="">Observaciones privadas</label>
                            <textarea class="form-control" id="ObsPriv" rows="3" placeholder="Observaciones privadas">@Model.Model.ObsPriv</textarea>
                        </div>
                        <div class="row justify-content-center">
                            <button type="button" class="btn btn-primary btn-sm documento-cambiar-info">Guardar</button>
                            <input type="hidden" id="ID_Doc2" value="@ViewData["ID_Doc2"]">
                            <input type="hidden" id="ID_Idi" value="@ViewData["ID_Idi"]">
                        </div>

                        @* Características del documento *@
                        
                        <div class="card mt-3">
                            <div class="card-header card-header-options">
                                <span>Características del documento</span>
                                <div class="card-actions">
                                    <ul>
                                        <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-block">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Alta</label>
                                            <p>@Model.Model.Fe_Al_Idi - @Model.Model.Usu_Al_Idi</p>
                                        </div>
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Revision</label>
                                            <p>@Model.Model.Revision (@Model.Model.NumRev)</p>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Última modificación</label>
                                            <p>@Model.Model.Fe_Ul_Idi - @Model.Model.Usu_Ul_Idi</p>
                                        </div>
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Tamaño acumulado</label>
                                            <p>@Model.Model.Tam_Tot_Idi</p>
                                        </div>
                                    </div>
                                </div>
                                <hr class="m-0 mb-3" />
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Fichero</label>
                                            <p>@Model.Model.Fichero</p>
                                        </div>
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Extensión</label>
                                            <p>@Model.Model.Ext</p>
                                        </div>
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Ruta origen</label>
                                            <p>@Model.Model.FullName</p>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Tamaño</label>
                                            <p>@Model.Model.Tamaño</p>
                                        </div>
                                        <div class="form-group">
                                            <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Última modificación del fichero antes de importar</label>
                                            <p>@Model.Model.Fe_Mod</p>
                                        </div>
                                        @if (Model.Model.EsImg)
                                        {
                                            <div class="form-group">
                                                <label for=""><i class="fa fa-angle-right text-info mr-1"></i> Tamaño imagen</label>
                                                <p>@Model.Model.Ancho x @Model.Model.Alto</p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header card-header-options">
                        <span>Añadir etiquetas</span>
                        <div class="card-actions">
                            <ul>
                                <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">

                        <div class="form-group text-center px-3">

                            <div class="input-group input-group-sm ui-widget">
                                <input type="text" class="form-control ui-autocomplete-input" value="" placeholder="Buscar etiquetas" id="" name="" autocomplete="off">
                                <input id="" name="" type="hidden" value="0"><input id="" name="" type="hidden" value="">
                                <span class="input-group-append">
                                    <button class="btn btn-primary vfindcarac" id="" type="button">Añadir</button>
                                </span>
                            </div>
                            <div class="mt-3 mb-0">
                                <span class="badge badge-pill badge-default p-2 mt-1"><i class="fa fa-tag ml-1 mr-1"></i> <a href="#" class="fw-5"> Operador Maquinaria</a> <a href="#" class="tag-del"><i class="fa fa-times"></i></a></span>
                            </div>


                        </div>

                    </div>
                </div>

                @* Sobreescribir documentos *@

                <div class="card mb-3">
                    <div class="card-header card-header-options">
                        <span>Nueva versión del documento</span>
                        <div class="card-actions">
                            <ul>
                                <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">

                        <div class="form-group text-center px-2">
                            <form id="uploadForm" asp-action="FileUpload" asp-controller="Content" method="post" enctype="multipart/form-data">
                                <input type="file" class="form-control-file" id="UploadFormFile">
                            </form>
                        </div>

                        <div class="form-group">
                            <label for="">Revisión</label>
                            <input type="text" class="form-control" id="Rev" placeholder="Revisión" />
                        </div>

                        <div class="form-group">
                            <label for="">Idioma</label>
                            <select class="custom-select col-12" id="ID_IdiFile">
                                <option value="1">Español</option>
                            </select>
                        </div>

                        <div class="row justify-content-center">
                            <a href="#" class="btn btn-sm btn-primary mt-3" id="uploadButtonAct">Importar nueva versión</a>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-6">

                @* Documentos públicos *@

                @{
                    if (Model.Model.pub != null)
                    {

                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Documentos públicos <i class="fa fa-globe"></i></span>
                            </div>
                            <div class="card-block">
                                <table class="table table-striped table-select">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Documento</th>
                                            <th>Usuario</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (Int32 t = 0; t < Model.Model.LisIdis.Length; t++)
                                        {
                                        <tr>
                                            <td>
                                                @Model.Model.pub[t].Fe_Al
                                            </td>
                                            <td>
                                                <a href="https://@Model.Model.pub[t].Url" class="fw-5 mt-0" target="_blank">@Model.Model.pub[t].Titulo</a>
                                            </td>
                                            <td>
                                                @Model.Model.pub[t].Usu
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    }
                }


                @* Listado de idiomas *@

                <div class="card card-table mb-3">
                    <div class="card-header card-header-options">
                        <span>Listado de idiomas</span>
                    </div>
                    <div class="card-block">
                        <table class="table table-striped table-select">
                            <thead>
                                <tr>
                                    <th>Idioma</th>
                                    <th>Fecha</th>
                                    <th>Autor</th>
                                    <th>Tamaño</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Model.LisIdis != null)
                                {
                                    for (Int32 t = 0; t < Model.Model.LisIdis.Length; t++)
                                    {
                                        <tr>
                                            <td>
                                                <p class="fw-5 mt-0 mb-0">@Model.Model.LisIdis[t].datoS3</p>
                                            </td>
                                            <td>
                                                <p class="fw-5 mb-0">@Model.Model.LisIdis[t].datoS1</p>
                                            </td>
                                            <td>
                                                <p class="fw-5 m-0">@Model.Model.LisIdis[t].datoS2</p>
                                                </td>
                                            <td>
                                                <p class="fw-5 m-0">@Model.Model.LisIdis[t].datoS5</p>
                                            </td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4">
                                            <p class="fw-5 mt-0 mb-0 text-danger">No hay documentos</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @* Revisiones del documento *@
                <div class="card card-table">
                    <div class="card-header card-header-options">
                        <span>Revisiones del documento</span>
                    </div>
                    <div class="card-block">

                        @* Histórico revisiones *@

                        <table class="table table-striped table-select">
                            <thead>
                                <tr>
                                    <th class="w-20">Fecha <a href="#" class="sort-active"><i class="fa fa-chevron-down"></i></a><a href="#"><i class="fa fa-chevron-up"></i></a></th>
                                    <th class="w-20">Autor</th>
                                    <th class="w-20">Idioma</th>
                                    <th class="w-20">Revision</th>
                                    <th class="w-20">Descargar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Model.LisRev != null)
                                {
                                    for (Int32 t = 0; t < Model.Model.LisRev.Length; t++)
                                    {
                                        <tr class="tags-datos-tag" id="tag_5_1">
                                            <td>
                                                <p class="mt-0 mb-0">@Model.Model.LisRev[t].datoS1</p>
                                            </td>
                                            <td>
                                                <p class="fw-5 mb-0">@Model.Model.LisRev[t].datoS2</p>
                                            </td>
                                            <td>
                                                <p class="m-0 fw-5">@Model.Model.LisRev[t].datoS3</p>
                                            </td>
                                            <td>
                                                <p class="m-0 fw-5">@Model.Model.LisRev[t].datoI</p>
                                            </td>
                                            <td>
                                                <p class="m-0 fw-5"><a href="/modulo-biblioteca/documentos/documento/descargar?ID_Doc2=@ViewData["ID_Doc2"]&ID_Idi=@Convert.ToInt32(Model.Model.LisRev[t].datoD)&Rev=@Model.Model.LisRev[t].datoI" class="btn btn-sm btn-primary" target="_blank">Descargar</a></p>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-9">

            </div>
            <div class="col-3">

            </div>
        </div>
    </div>
</div>