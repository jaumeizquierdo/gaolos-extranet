@model DashBoardLibrary.DashBoardViewModel
@{
    Layout = "~/Views/Shared/Modulo-Web/_Modulo-Web-Web.cshtml";
    ViewData["Title"] = Model.Model.Modulo;
}

<div class="main-content m-0" id="widget-area">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                @if (Model.Model.Err.eserror)
                {
                    ViewData["err"] = Model.Model.Err.mensaje;
                    @Html.Partial("AccesoDenegado");
                }
                else
                {

                    @Html.Partial("WebsCabecera")

                    @* tabs *@

                    @Html.Partial("Web-Tabs")

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header card-header-options">
                                    <span>General</span>
                                </div>
                                <div class="card-block p-0">

                                    <div class="d-flex flex-column p-2">

                                        <div class="input-group input-group-sm mb-2 mr-0">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text mw-140" for="">FTP asociado</label>
                                            </div>
                                            <select class="custom-select" id="">
                                                <option value="1" selected="">FTP a publicar</option>
                                            </select>
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                            </div>
                                        </div>

                                        <div class="input-group input-group-sm mb-2 mr-0">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text mw-140" for="">Título del nodo</label>
                                            </div>
                                            <input type="text" class="form-control" id="" aria-describedby="" value="" placeholder="Título del nodo">
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                            </div>
                                        </div>

                                        <div class="input-group input-group-sm mb-2 mr-0">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text mw-140" for="">URL del nodo</label>
                                            </div>
                                            <input type="text" class="form-control" id="" aria-describedby="" value="" placeholder="URL del nodo">
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                            </div>
                                        </div>

                                        <div class="input-group input-group-sm mb-2 mr-0">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text mw-140" for="">Pasarela vinculada</label>
                                            </div>
                                            <select class="custom-select" id="">
                                                <option value="1" selected="">Pasarela vinculada</option>
                                            </select>
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                            </div>
                                        </div>

                                        <div class="d-flex align-items-center">
                                            <input type="checkbox" class="mr-2" id="" checked="">
                                            <span class="fw-5 mr-2">Control alta de usuarios</span>
                                            <a href="#" class="btn btn-sm btn-primary">Guardar</a>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>

                }

            </div>
        </div>

    </div>

</div>

@Html.Partial("DashboardScripts")