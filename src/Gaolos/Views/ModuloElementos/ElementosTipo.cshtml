@model ModuloElementosLibrary.ElementosTipoDetallesViewModel
@{
    Layout = "~/Views/Shared/Modulo-Elementos/_Modulo-Elementos.cshtml";
    ViewData["Title"] = "Tipo";
    ViewData["SubTitle"] = "Tipo";
    ViewData["PlantillasMantenimiento"] = "Módulo Elementos";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                @if (Model.Model.Err.eserror)
    {
        ViewData["err"] = Model.Model.Err.mensaje;
                @Html.Partial("AccesoDenegado");
    }
    else
    {
                <div class="row">
                    <div class="col-12">
                        <div class="card mb-3">
                            <div class="card-header card-header-options">
                                <span>Tipo</span>

                                <div class="card-actions">
                                    <ul>
                                        <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-block p-0">
                                <div class="d-flex justify-content-center align-items-center">

                                    <div class="col-1 pb-2 pt-2 box-border-right-light">
                                        <img src="https://image.flaticon.com/icons/svg/321/321777.svg" style="width: 100%">
                                        <input type="hidden" id="ID_Tipo2" value="@Model.Model.ID_Tipo2" />
                                    </div>

                                    <div class="col-11 pt-2 pb-2">
                                        <h5 class="fw-5 title-section">@Model.Model.Tipo</h5>
                                        <div class="d-flex">
                                            <div class="box-grey-bg">
                                                <p class="mb-0"><small class="fw-5"><span class="mr-1">Tipo:</span> <span class="text-danger">@Model.Model.Tipo</span></small></p>
                                                <p class="mb-0"><small class="fw-5"><span class="mr-1">Número características:</span> <span class="text-danger">@Model.Model.NumColCarac</span></small></p>
                                                <p class="mb-0"><small class="fw-5"><span class="mr-1">Número preguntas:</span> <span class="text-danger">@Model.Model.NumColPreg</span></small></p>
                                                <p class="mb-0"><small class="fw-5"><span class="mr-1">Número servicios:</span> <span class="text-danger">@Model.Model.NumServ</span></small></p>
                                                <p class="mb-0"><small class="fw-5"><span class="mr-1">Número marcas:</span> <span class="text-danger">@Model.Model.NumMarcas</span></small></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">

                        @* Resultado Búsqueda *@

                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Modificar tipo</span>
                            </div>
                            <div class="card-block p-0">
                                <div class="d-flex flex-column p-2">
                                    <div class="d-flex mb-1">
                                        <div class="input-group input-group-sm mb-0">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Tipo</span>
                                            </div>
                                            <input type="text" class="form-control" id="Tipo" value="@Model.Model.Tipo" placeholder="Tipo">
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="input-group input-group-sm mb-0">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Nº Carac.</span>
                                            </div>
                                            <input type="text" class="form-control" id="NumColCarac" value="@Model.Model.NumColCarac" placeholder="Número de características">
                                        </div>
                                    </div>
                                    <div class="d-flex">
                                        <div class="input-group input-group-sm mb-0">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Nº. Preg</span>
                                            </div>
                                            <input type="text" class="form-control" id="NumColPreg" value="@Model.Model.NumColPreg" placeholder="Número de preguntas">
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center box-guardar">
                                    <a href="#" target="_blank" class="btn btn-sm btn-primary tipo-guardar">Guardar</a>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Servicios vinculados</span>
                                <div class="input-group input-group-sm col-4 mr-0 pr-0">
                                    <input type="text" class="form-control form-control-sm" name="findcarac1" id="findcarac1" placeholder="Buscar servicio a vincular">
                                    <input type="hidden" id="vfindcarac1" name="vfindcarac1" value="" />
                                    <input type="hidden" id="tfindcarac1" name="tfindcarac1" value="" />
                                    <span class="input-group-append">
                                        <button type="button" class="btn btn-primary btn-sm tipo-vincular-serv">Vincular</button>
                                    </span>
                                </div>
                            </div>
                            <div class="card-block p-0">
                                <div class="d-flex flex-column">
                                    <table class="table table-striped table-small border-top-none">
                                        <thead>
                                            <tr>
                                                <th>Servicio</th>
                                                <th class="text-center w-5"><i class="fa fa-times text-danger"></i></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Model.det != null)
                                            {
                                                @for (Int32 t = 0; t < Model.Model.det.Length; t++)
                                                {
                                                    <tr>
                                                        @if (Model.Model.det[t].datoS2 == "")
                                                        {
                                                            <td>@Model.Model.det[t].datoS1</td>
                                                        }
                                                        else
                                                        {
                                                            <td>@Model.Model.det[t].datoS1 <a href="/modulo-servicios/servicios/servicio?ID_Serv2=@Model.Model.det[t].datoS2" target="_blank" data-toggle="tooltip" data-placement="right" title="" data-original-title="Ir a la ficha del servicio" class="fw-5">(@Model.Model.det[t].datoS2)</a></td>
                                                        }
                                                        <td class="text-center"><a href="#" class="text-danger tipo-desvincular-serv" id="desvinc_@Model.Model.det[t].datoI"><i class="fa fa-times"></i></a></td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="2" class="p-0"><p class="mb-0 fw-5 p-2 text-danger"><i class="fa fa-times"></i> No hay servicios vinculados</p></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                <span>Marcas vinculadas</span>
                                <div class="input-group input-group-sm col-4 mr-0 pr-0">
                                    <input type="text" class="form-control form-control-sm ui-autocomplete-input" name="findcarac2" id="findcarac2" placeholder="Buscar marca a vincular" autocomplete="off">
                                    <input type="hidden" id="vfindcarac2" name="vfindcarac2" value="" />
                                    <input type="hidden" id="tfindcarac2" name="tfindcarac2" value="" />
                                    <span class="input-group-append">
                                        <button type="button" class="btn btn-primary btn-sm tipo-vincular-marca">Vincular</button>
                                    </span>
                                </div>
                            </div>
                            <div class="card-block p-0">
                                <div class="d-flex flex-column">
                                    <table class="table table-striped table-small border-top-none">
                                        <thead>
                                            <tr>
                                                <th>Marca</th>
                                                <th class="text-center w-5"><i class="fa fa-times text-danger"></i></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Model.Marcas != null)
                                            {
                                                @for (Int32 t = 0; t < Model.Model.Marcas.Length; t++)
                                                {
                                                    <tr>
                                                        @if (Model.Model.Marcas[t].datoS2 == "")
                                                        {
                                                            <td>@Model.Model.Marcas[t].datoS1</td>
                                                        }
                                                        else
                                                        {
                                                            <td>@Model.Model.Marcas[t].datoS1 <a href="//modulo-elementos/marcas" target="_blank" data-toggle="tooltip" data-placement="right" title="" data-original-title="Ir a la ficha de la marca" class="fw-5">(@Model.Model.Marcas[t].datoS2)</a></td>
                                                        }
                                                        <td class="text-center"><a href="#" class="text-danger tipo-desvincular-marca" id="desvincmar_@Model.Model.Marcas[t].datoI"><i class="fa fa-times"></i></a></td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="2" class="p-0"><p class="mb-0 fw-5 p-2 text-danger"><i class="fa fa-times"></i> No hay marcas vinculadas</p></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
