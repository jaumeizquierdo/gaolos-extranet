<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gaolos</title>

    @Html.Partial("Estilos")
    @Html.Partial("Scripts")

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <meta name="google-signin-client_id" content="733483521618-grnt5e6d4c1v425kea2ndulfut5oqcsn.apps.googleusercontent.com">
    <meta name="google-signin-scope" content="https://www.googleapis.com/auth/analytics.readonly">

</head>
<body>

    <div class="layout__body">

        <aside class="layout__nav layout__columns d-none d-xl-block" id="MenuGaolosComponent">
            @await Component.InvokeAsync(nameof(MenuGaolosLibrary.MenuGaolosComponent))
        </aside>

        <main class="layout__content">
            <header id="MenuUsuarioComponent">
                @await Component.InvokeAsync(nameof(MenuUsuarioLibrary.MenuUsuarioComponent))
            </header>
            @RenderBody()
        </main>

        <aside class="layout__aside layout__columns" id="MenuNotificacionesComponent">
            @await Component.InvokeAsync(nameof(MenuNotificacionesLibrary.MenuNotificacionesComponent))
        </aside>

    </div>

    @* GAOLOS CORE *@
    @Html.Partial("ScriptsCoreGaolos")

    @* Gaolos Section Scripts *@
    <script src="~/js/seo.js" asp-append-version="true"></script>
    <script src="~/js/graficas.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)

    <script>
        RefreshCounters();
    </script>

    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDp_XTA4o-Cd-BBZIgqGc4EDno6sbgsIaI&callback=initMap"></script>

</body>
</html>