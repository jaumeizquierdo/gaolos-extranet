@model ModuloClientesLibrary.ModuloClientesClientePreciosEspecialesViewModel
@{
    Layout = "~/Views/Shared/Modulo-Clientes/_Modulo-Clientes-Precios-Especiales.cshtml";
    ViewData["Title"] = "Cliente";
    ViewData["Message"] = "Modulo de Clientes - Gaolos App v2017";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if (Model.Model.Err.eserror)
                {
                    ViewData["err"] = Model.Model.Err.mensaje;
                    @Html.Partial("AccesoDenegado");
                }
                else
                {

                    @* cabecera cliente *@

                    @Html.Partial("Cliente-Cabecera")

                    @* tabs - clientes *@

                    @Html.Partial("Cliente-Tabs")

                    @* tabs - Clientes - Precios especiales *@

                    @Html.Partial("Cliente-PreciosEspeciales-Tabs")

                    <div class="card">
                        <div class="card-block">

                            <div class="row">

                                <div class="col-6">
                                    <div class="card card-table mb-3">
                                        <div class="card-header card-header-options">
                                            <span>Resumen precios especiales</span>
                                        </div>
                                        <div class="card-block">

                                            @{
                                                Models.strDato[] det = Model.Model.det;
                                            }

                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th class="">Tipo precio especial</th>
                                                        <th class="w-10 text-center">Nº</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (det != null)
                                                    {
                                                        @for (Int32 t = 0; t < det.Length; t++)
                                                        {
                                                            <tr>
                                                                <td class=""><p class="mb-0 fw-5">@det[t].datoS</p></td>
                                                                <td class="text-center"><p class="mb-0 fw-5">@det[t].datoI</p></td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="5"><p class="mb-0 fw-5 p-3 text-danger"><i class="fa fa-times"></i> No hay resultados</p></td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">

                                    @* Presupuesto *@

                                    <div class="card-info-wrapper w-100" id="sindatos" style="display: none;">
                                        <div class="card-info">
                                            <div class="d-flex justify-content-center align-items-center">
                                                <img src="https://image.flaticon.com/icons/svg/609/609998.svg" style="width: 20%;">
                                                <p class="mb-2 ml-3">Resumen de los tipos de precios especiales</p>
                                            </div>
                                        </div>
                                        <svg class="card-info-triangle">
                                            <polygon points="0,0 200,0 0,200" fill="currentColor"></polygon>
                                        </svg>
                                    </div>

                                    <div class="card card-table mb-3" id="verpres" style="display:none;">
                                        <div class="card-header card-header-options">
                                            <span>Presupuesto nº <span id="numpres"></span> </span>

                                            <div class="card-actions">
                                                <ul>
                                                    <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="card-block p-3" role="tablist" aria-multiselectable="true" id="pres_content">
                                        </div>
                                    </div>

                                </div>





                            </div>
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
</div>

