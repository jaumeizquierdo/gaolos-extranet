                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    @* Pasarelas Clientes *@
                    <div class="card mb-3">
                        <div class="card-header card-header-options">
                            <a class="fs-1-1 fw-4" href="/modulo-contabilidad/conciliacion/pasarelas-facturas">@ViewData["TitlePasarelaClientes"]</a>

                            <div class="card-actions">
                                <ul>
                                    <li><a href="#" class="handle"><i class="fa fa-bars"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-block">

                            <div class="row" style="min-height: 10rem;">
                                <div class="col-3 text-center">
                                    <img src="~/images/semaforo-apagado.svg" style="width: 110%" id="db-pasa-cli_sema">
                                </div>
                                <div class="col-8">
                                    <h5 class="fw-5 mb-0">Pendientes: <a href="#"><span class="text-info fw-8" id="db-pasa-cli_num">@Model.Model.NumPasaCli</span></a></h5>
                                    <div class="text-left" id="db-pasa-cli_text">
                                        <div class="text-center"><img src="~/images/loading-rolling.svg" style="width: 30%" /></div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-4"></div>
                <div class="col-4"></div>
            </div>

        }

    </div>
</div>


<script>
    $(document).ready(function () {
        DashBoardConciliacionFraCli("db-fra-cli");
        DashBoardConciliacionFraProv("db-fra-prov");
        DashBoardConciliacionRem("db-rem");
        DashBoardConciliacionMovCue("db-mov-cue");
        DashBoardConciliacionMovTar("db-mov-tar");
        DashBoardConciliacionPasaBan("db-pasa-ban");
        DashBoardConciliacionPasaCli("db-pasa-cli");
    });
</script>
