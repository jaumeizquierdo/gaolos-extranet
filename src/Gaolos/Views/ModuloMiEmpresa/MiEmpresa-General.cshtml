                                                @if (Model.Model.Mails[t].datoS3!="")
                                                    {
                                                <i class="fa fa-exclamation-triangle mr-1 text-danger" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="" data-original-title="@Model.Model.Mails[t].datoS3"></i>
                                                    }
                                                @*@if (Model.Model.Mails[t].datoD != 0)
                                                    {
                                                        <i class="fa fa-ban mr-1 text-danger" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="" data-original-title="Mail sintácticamente incorrecto"></i>
                                                    }*@
                                            </td>
                                            <td>@Model.Model.Mails[t].datoS2</td>
                                            <td class="text-center">
                                                <input name="EsSelMail" id="es-com_@Model.Model.Mails[t].datoI" class="sel-mail-com" type="radio" @if (Model.Model.Mails[t].datoB) { @Html.Raw("checked")  }>
                                            </td>
                                            <td class="text-center"><a href="#" class="text-danger cliente-mail-eliminar" id="mail-eli_@Model.Model.Mails[t].datoI"><i class="fa fa-times"></i></a></td>
                                        </tr>
                                                }

                                            }
                                            else
                                            {
                                        <tr><td colspan="6"><p class='fw-5 text-danger mb-0'><i class='fa fa-exclamation-circle mr-1'></i> No hay resultados</p></td></tr>
                                            }

                                    </tbody>
                                </table>
                            </div>
                        </div>

                        @* Centros *@
                        <div class="card card-table mb-3">
                            <div class="card-header card-header-options">
                                @if (Model.Model.Centros != null)
                                    {
                                @if (Model.Model.Centros.Length > 1)
