@model ModuloClientesLibrary.ModuloClientesClienteRelacionadoConViewModel
@{
    Layout = "~/Views/Shared/Modulo-Contactos/_Modulo-Contactos-Contacto.cshtml";
    ViewData["Title"] = "Empresas relacionadas";
    ViewData["Message"] = "Modulo de Contactos - Gaolos App v2017";
}

<div class="main-content m-0">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if (Model.Model.Err.eserror)
    {
        ViewData["err"] = Model.Model.Err.mensaje;
                @Html.Partial("AccesoDenegado");
}
else
{

                @* cabecera cliente *@

                @Html.Partial("Contacto-Cabecera")

                @* tabs *@

                @Html.Partial("Contacto-Tabs")

                <div class="card card-table mb-3">
                    <div class="card-header card-header-options">
                        <span>Vincular con la empresa</span>
                        <div class="input-group input-group-sm col-4 mr-0 pr-0">
                            <input type="text" class="form-control form-control-sm" id="" placeholder="Vincular con la empresa" data-toggle="modal" data-target="#eliminarRelacion">
                            <div class="input-group-append">
                                <button type="button" class="btn btn-primary btn-sm">Vincular</button>
                            </div>
                        </div>
                    </div>
                </div>

if (Model.Model.det != null)
{
    for (Int32 t = 0; t < Model.Model.det.Length; t++)
    {
                <div class="card card-table mb-3">
                    <div class="card-header card-header-options">
                        <span>@Model.Model.det[t].Emp - @Model.Model.det[t].TipCli - <a href="/modulo-clientes/clientes/cliente?ID_Cli2=@Model.Model.det[t].ID_Cli2" target="_blank" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ir a la ficha de esta empresa">@Model.Model.det[t].ID_Cli2</a> - @Model.Model.det[t].Fe_Al - @Model.Model.det[t].Usu</span>
                        <a href="#" class="btn btn-sm btn-sm-2x btn-danger" data-toggle="modal" data-target="#eliminarContacto">Eliminar relación</a>
                    </div>

                    <div class="card-block">
                        @* Flex Checks *@

                        <div class="d-flex">

                            @* Checks *@

                            <div class="d-flex flex-column col-2 p-0 box-border-right">

                                <label class="p-2 mb-0 box-border-bottom-light mb-0">Opciones</label>

                                <div class="d-flex flex-column px-3 py-2">
                                    <div class="form-group mr-3 mb-2">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            @if (Model.Model.det[t].EnvFac)
                    {
                                            <input type="checkbox" class="custom-control-input" id="EnvFac" checked>
}
else
{
                                            <input type="checkbox" class="custom-control-input" id="EnvFac">
}

                                            <span class="custom-control-label">Enviar factura</span>
                                        </label>
                                    </div>
                                    <div class="form-group mr-3 mb-2">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            @if (Model.Model.det[t].ForPag)
                    {
                                            <input type="checkbox" class="custom-control-input" id="ForPag" checked>
}
else
{
                                            <input type="checkbox" class="custom-control-input" id="ForPag">
}

                                            <span class="custom-control-label">Forma de pago: Heredada</span>
                                        </label>
                                    </div>
                                    <div class="form-group mr-3 mb-2">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            @if (Model.Model.det[t].CobEnEsp)
                    {
                                            <input type="checkbox" class="custom-control-input" id="CobEnEsp" checked>
}
else
{
                                            <input type="checkbox" class="custom-control-input" id="CobEnEsp">
}

                                            <span class="custom-control-label">Cobro a negociar</span>
                                        </label>
                                    </div>
                                    <div class="form-group mr-3 mb-3">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            @if (Model.Model.det[t].Precios)
                    {
                                            <input type="checkbox" class="custom-control-input" id="Precios" checked>
}
else
{
                                            <input type="checkbox" class="custom-control-input" id="Precios">
}

                                            <span class="custom-control-label">Heredar precios</span>
                                        </label>
                                    </div>
                                    <div class="form-group mr-3 mb-3">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            @if (Model.Model.det[t].FacAEmpRel)
                    {
                                            <input type="checkbox" class="custom-control-input" id="FacAEmpRel" checked>
}
else
{
                                            <input type="checkbox" class="custom-control-input" id="FacAEmpRel">
}

                                            <span class="custom-control-label">Facturar a empresa relacionada</span>
                                        </label>
                                    </div>
                                    <div class="form-group mb-2">
                                        <button type="button" class="btn btn-primary btn-sm">Guardar</button>
                                    </div>
                                </div>

                            </div>

                            @* Tags *@
                            <div class="d-flex flex-column col-4 p-0">
                                <label class="p-2 mb-0 box-border-bottom-light mb-3">Etiquetas</label>
                                <div class="form-group text-center px-3 mb-0">
                                    <div class="input-group input-group-sm ui-widget">
                                        <input type="text" class="form-control ui-autocomplete-input" value="" placeholder="Buscar etiquetas" id="" name="" autocomplete="off">
                                        <input id="" name="" type="hidden" value="0"><input id="" name="" type="hidden" value="">
                                        <span class="input-group-append">
                                            <button class="btn btn-primary vfindcarac" id="" type="button">Añadir</button>
                                        </span>
                                    </div>
                                    <div class="mt-2 mb-0">
                                        @*<span class="badge badge-pill badge-default p-2 mt-1"><i class="fa fa-tag ml-1 mr-1"></i> <a href="#" class="fw-5"> Operador Maquinaria</a> <a href="#" class="tag-del"><i class="fa fa-times"></i></a></span>
                                <span class="badge badge-pill badge-default p-2 mt-1"><i class="fa fa-tag ml-1 mr-1"></i> <a href="#" class="fw-5"> Etiqueta</a> <a href="#" class="tag-del"><i class="fa fa-times"></i></a></span>
                                <span class="badge badge-pill badge-default p-2 mt-1"><i class="fa fa-tag ml-1 mr-1"></i> <a href="#" class="fw-5"> Otra</a> <a href="#" class="tag-del"><i class="fa fa-times"></i></a></span>
                                <span class="badge badge-pill badge-default p-2 mt-1"><i class="fa fa-tag ml-1 mr-1"></i> <a href="#" class="fw-5"> Operador Maquinaria</a> <a href="#" class="tag-del"><i class="fa fa-times"></i></a></span>*@
                                    </div>
                                </div>
                            </div>

                            @if (Model.Model.det[t].Conts != null)
    {

                            @* Tabla clientes *@
                            <div class="d-flex col-6 p-0">
                                <div class="d-flex flex-column p-0 box-border-left flex-column">
                                    <div class="d-flex align-items-center pr-3 box-border-bottom-light">
                                        <label class="p-2 mb-0 mb-0">Clientes relacionados</label>
                                        <a href="#" class="btn btn-sm btn-sm-2x btn-primary" data-toggle="modal" data-target="#nuevoContacto">Vincular contacto</a>
                                    </div>
                                    <table class="table table-striped p-0 mb-0">
                                        <thead>
                                            <tr>
                                                <th style="border-top: none !important;">Contacto</th>
                                                <th style="border-top: none !important;">Teléfonos</th>
                                                <th style="border-top: none !important;">Emails</th>
                                                <th style="border-top: none !important;" class="text-center w-20">Enviar factura</th>
                                                <th style="border-top: none !important;" class="w-30">Observaciones</th>
                                                <th style="border-top: none !important;" class="w-5 text-right"><i class="fa fa-times"></i></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (Int32 b = 0; b < Model.Model.det[t].Conts.Length; b++)
    {
                                            <tr>
                                                <td><a href="#" data-toggle="modal" data-target="#nuevoContacto" class="fw-5">@Model.Model.det[t].Conts[b].Nom</a> @Model.Model.det[t].Conts[b].Cargo</td>
                                                <td>
                                                    @if (Model.Model.det[t].Conts[b].Tels != null)
    {
                                                    @for (Int32 x = 0; x < Model.Model.det[t].Conts[b].Tels.Length; x++)
{

                                                    @Model.Model.det[t].Conts[b].Tels[x].datoS1
                                                    @if (@Model.Model.det[t].Conts[b].Tels[x].datoS2 != "")
        {
                                                    @Html.Raw("<small> - " + Model.Model.det[t].Conts[b].Tels[x].datoS2 + "</small>")
}


}

}
                                                </td>
                                                <td>
                                                    @if (Model.Model.det[t].Conts[b].Mails != null)
    {
                                                    @for (Int32 x = 0; x < Model.Model.det[t].Conts[b].Mails.Length; x++)
{
                                                    <small>
                                                        <a href="mailto:@Model.Model.det[t].Conts[b].Mails[x].datoS1" class="ml-2 fw-5">
                                                            @Model.Model.det[t].Conts[b].Mails[x].datoS1
                                                            @if (@Model.Model.det[t].Conts[b].Mails[x].datoS2 != "")
        {
                                                            @Html.Raw(" - " + Model.Model.det[t].Conts[b].Mails[x].datoS2)
}
                                                        </a>
                                                    </small>

}

}
                                                </td>
                                                <td class="text-center w-10">
                                                    @if (@Model.Model.det[t].Conts[b].EnvFac)
    {
                                                    <i class="fa fa-check text-success"></i>
}
else
{
                                                    <i class="fa fa-times text-danger"></i>
}
                                                </td>
                                                <td><small>@Model.Model.det[t].Conts[b].Obs</small></td>
                                                <td class="w-5"><a href="#" class="text-center text-danger ml-3"><i class="fa fa-times"></i></a></td>
                                            </tr>
}

                                        </tbody>
                                    </table>
                                </div>
                            </div>

}
else
{

}


                        </div>

                    </div>

                </div>


}


}
else
{

                <p class="fw-5 px-2 text-danger"><i class="fa fa-times mr-1"></i> No hay empresas vinculadas</p>
}

                @* Modal Nuevo / Modificar Contacto *@
                <div class="modal fade" id="nuevoContacto" tabindex="-1" role="dialog" aria-labelledby="nuevoContacto" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header py-2 px-3">
                                <h5 class="modal-title fs-0-9 fw-5" id="fotoModalLabel">Modificar contacto</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-center">
                                <div class="d-flex">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <label class="input-group-text" for="ID_TipCli2">Tipo de cliente</label>
                                        </div>
                                        <select class="custom-select" id="ID_TipCli2">
                                            <option value="0">- tipo -</option>
                                            <option value="7">Administrador</option>
                                            <option value="4">Comercio</option>
                                            <option value="1" selected="">Comunidad</option>
                                            <option value="2">Empresa</option>
                                            <option value="6">Estamento Público</option>
                                            <option value="3">Particular</option>
                                            <option value="5">SubContrata</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mb-3">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input type="checkbox" class="custom-control-input">

                                            <span class="custom-control-label">Enviar factura</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="input-group input-group-sm mb-0">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Motivo</span>
                                        </div>
                                        <textarea class="form-control" rows="4" aria-label="With textarea" placeholder="Observaciones" id=""></textarea>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <a href="#" class="btn btn-sm btn-primary">Enviar</a>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>


                @* Modal Nuevo / Modificar Contacto *@
                <div class="modal fade" id="eliminarContacto" tabindex="-1" role="dialog" aria-labelledby="eliminarContacto" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header py-2 px-3">
                                <h5 class="modal-title fs-0-9 fw-5" id="fotoModalLabel">Eliminar relación</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-center">
                                <div class="d-flex">
                                    <div class="input-group input-group-sm mb-0">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Motivo</span>
                                        </div>
                                        <textarea class="form-control" rows="4" aria-label="With textarea" placeholder="Observaciones" id=""></textarea>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <a href="#" class="btn btn-sm btn-danger">Eliminar</a>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>




}
            </div>
        </div>
    </div>
</div>

