@model SituacionLibrary.SituacionEmpresaViewModel
@{
    Layout = "~/Views/Shared/Modulo-Situacion/_Situacion.cshtml";
    ViewData["Title"] = "Situación - Empresa";
    ViewData["Message"] = "Situación - Gaolos App v2017";
}

<div class="main-content m-0" id="widget-area">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 header-section">
                <h2>@ViewData["Title"]</h2>
                @Html.Raw(ViewData["Migas"])
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                
                    @if (Model.Model.Err.eserror)
                    {
                        ViewData["err"] = Model.Model.Err.mensaje;
                        @Html.Partial("AccesoDenegado");
                    }
                    else
                    {
                

                <div class="card mb-3 animated fadeIn">
                    <div class="card-block p-0">
                        <form action="@ViewData["Form"]" method="post" class="sel-dates">
                            <div class="d-flex justify-content-center align-items-center">
                                <div class="col-1 text-center box-border-right-light py-2">
                                    <img src="https://image.flaticon.com/icons/svg/321/321764.svg" style="width: 100%;">
                                </div>
                                <div class="col-11">

                                    <div class="row p-0">
                                        <div class="col-12 p-0">
                                            <div class="d-flex mb-0 px-3">

                                                <div class="input-group input-group-sm mr-3 seldate date">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text" id="basic-addon3">Fecha de inicio</span>
                                                    </div>
                                                    <input type="text" class="form-control" aria-describedby="basic-addon3" placeholder="Fecha Inicio" value="@Model.Model.Fe_In" name="Fe_In">
                                                </div>

                                                <div class="input-group input-group-sm seldate date">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text" id="basic-addon3">Fecha final</span>
                                                    </div>
                                                    <input type="text" class="form-control" aria-describedby="basic-addon3" placeholder="Fecha Inicio" value="@Model.Model.Fe_Fi" name="Fe_Fi">
                                                </div>

                                                <button type="submit" class="btn btn-primary ml-2 cargargraficasbloque1 btn-sm btn-sm-2x">ACTUALIZAR</button>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

