@model CmsLibrary.CmsWebNodosEditarViewModel

@{
    Layout = "~/Views/Shared/Modulo-Cms/_CmsEditor.cshtml";
    ViewData["Title"] = "Editar web: " + @Model.CmsWeb.Web;
